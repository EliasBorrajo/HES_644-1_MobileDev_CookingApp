<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ch.hevs.cookingapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookingApp"
        tools:targetApi="31">

        <activity
            android:name=".ui.recipe.RecipeCreateActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/Theme.CookingApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.cookingapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.BaseActivity"
            android:exported="false"
            android:parentActivityName=".ui.mgmt.LoginActivity"
            android:theme="@style/Theme.CookingApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.cookingapp.ui.mgmt.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.recipe.RecipeDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.recipe.RecipesActivity"
            android:theme="@style/Theme.CookingApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.cookingapp.ui.recipe.RecipesActivity" />
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:parentActivityName=".ui.mgmt.LoginActivity"
            android:theme="@style/Theme.CookingApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.cookingapp.ui.mgmt.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.mgmt.RegisterActivity"
            android:exported="false"
            android:parentActivityName=".ui.mgmt.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.cookingapp.ui.mgmt.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.mgmt.SettingsActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/Theme.CookingApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.cookingapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.mgmt.AboutActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/Theme.CookingApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.cookingapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.recipe.RecipesActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/Theme.CookingApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.cookingapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.cook.CooksActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/Theme.CookingApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.cookingapp.ui.MainActivity"/>
        </activity>
        <activity
            android:name=".ui.cook.CookActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/Theme.CookingApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.cookingapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.mgmt.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>